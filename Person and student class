import java.util.ArrayList;
import java.util.List;

public class Person {
    private String firstName;
    private String lastName;
    private int age;

    // Constructors
    public Person(String firstName, String lastName, int age) {
        this.firstName = firstName;
        this.lastName = lastName;
        this.age = age;
    }

    // Getters and Setters
    public String getFirstName() {
        return firstName;
    }

    public void setFirstName(String firstName) {
        this.firstName = firstName;
    }

    public String getLastName() {
        return lastName;
    }

    public void setLastName(String lastName) {
        this.lastName = lastName;
    }

    public int getAge() {
        return age;
    }

    public void setAge(int age) {
        this.age = age;
    }

    // Additional methods
    public void displayDetails() {
        System.out.println("Name: " + firstName + " " + lastName);
        System.out.println("Age: " + age);
    }
}

class Student extends Person {
    private List<ModuleGrade> grades;

    public Student(String firstName, String lastName, int age) {
        super(firstName, lastName, age);
        this.grades = new ArrayList<>();
    }

    public void addGrade(ModuleGrade grade) {
        grades.add(grade);
    }

    public List<ModuleGrade> getGrades() {
        return grades;
    }

    public double calculateQca() {
        double totalQca = 0.0;
        double totalCredits = 0.0;

        for (ModuleGrade grade : grades) {
            if (gradingScale.containsKey(grade.getGrade())) {
                double qca = gradingScale.get(grade.getGrade());
                totalQca += qca * grade.getCredits();
                totalCredits += grade.getCredits();
            }
        }

        return (totalCredits == 0) ? 0.0 : totalQca / totalCredits;
    }

    public void displayTranscript() {
        System.out.println("Transcript for: " + getFirstName() + " " + getLastName());
        for (ModuleGrade grade : grades) {
            System.out.println(grade);
        }
        System.out.println("QCA: " + calculateQca());
    }
}

class ModuleGrade {
    private String moduleName;
    private String grade;
    private double credits;

    public ModuleGrade(String moduleName, String grade, double credits) {
        this.moduleName = moduleName;
        this.grade = grade;
        this.credits = credits;
    }

    public String getModuleName() {
        return moduleName;
    }

    public String getGrade() {
        return grade;
    }

    public double getCredits() {
        return credits;
    }

    @Override
    public String toString() {
        return moduleName + ": " + grade + " (" + credits + " credits)";
    }
}
